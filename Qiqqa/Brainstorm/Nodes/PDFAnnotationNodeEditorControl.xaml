<UserControl x:Class="Qiqqa.Brainstorm.Nodes.PDFAnnotationNodeEditorControl"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local_gui="clr-namespace:Utilities.GUI;assembly=Utilities"
  xmlns:commongui="clr-namespace:Qiqqa.Common.GUI"
             xmlns:local_metadata="clr-namespace:Qiqqa.Documents.PDF.PDFControls.MetadataControls"
>
    <DockPanel>
        <FlowDocumentScrollViewer  IsToolBarVisible="False" VerticalScrollBarVisibility="Auto" DockPanel.Dock="Top">
            <commongui:StandardFlowDocument>
                <Paragraph>
                    Explore this annotation by pressing:
                </Paragraph>
                <List>
                    <ListItem>
                        <Paragraph>
                            'P' - view the PDF under this annotation.
                        </Paragraph>
                    </ListItem>
                </List>
            </commongui:StandardFlowDocument>
        </FlowDocumentScrollViewer>
    </DockPanel>
</UserControl>