<UserControl x:Class="Qiqqa.Brainstorm.Nodes.ThemeNodeContentEditor"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local_gui="clr-namespace:Utilities.GUI;assembly=Utilities"
  xmlns:commongui="clr-namespace:Qiqqa.Common.GUI"
>
    <FlowDocumentScrollViewer  IsToolBarVisible="False" VerticalScrollBarVisibility="Auto">
        <commongui:StandardFlowDocument>
            <Paragraph>
                Press 'D' to expand the most influential documents in this Expedition theme.
            </Paragraph>
            <Paragraph>
                Press 'S' to expand the most specific documents in this Expedition theme.
            </Paragraph>
        </commongui:StandardFlowDocument>
    </FlowDocumentScrollViewer>
</UserControl>