<UserControl x:Class="Qiqqa.Brainstorm.Nodes.ThemeNodeContentControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >
    <Viewbox Stretch="Uniform" HorizontalAlignment="Center">
        <Grid Name="ObjBackgroundGrid">
            <Image Name="ImageIcon" Width="64" />
            <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Border Name="TextBorder" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Name="ObjTags" TextWrapping="Wrap" Text="{Binding Tags}" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" />
                </Border>
            </WrapPanel>
        </Grid>
    </Viewbox>
</UserControl>