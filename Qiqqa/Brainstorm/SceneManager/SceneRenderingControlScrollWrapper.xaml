    <Grid.ColumnDefinitions>
        <ColumnDefinition />
        <ColumnDefinition Width="Auto"/>
    </Grid.ColumnDefinitions>
    <local_scene:SceneRenderingControl x:Name="ObjSceneRenderingControl" />
    <ScrollBar Grid.Row="1" Orientation="Horizontal" Name="ScrollHorizonal" />
    <ScrollBar Grid.Column="1" Orientation="Vertical" Name="ScrollVertical" />
