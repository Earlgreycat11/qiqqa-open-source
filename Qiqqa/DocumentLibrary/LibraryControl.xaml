                                    </StackPanel>
                                </MenuItem.Header>
                            </MenuItem>
                            <MenuItem x:Name="ButtonImportFromThirdParty">
                                <MenuItem.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <Image
                                            x:Name="ButtonImportFromThirdPartyIcon"
                                            Width="32"
                                            Height="32" />
                                        <TextBlock x:Name="ButtonImportFromThirdPartyText" />
                                    </StackPanel>
                                </MenuItem.Header>
                            </MenuItem>
                            <MenuItem x:Name="ButtonAddDocumentsFromLibrary">
                                <MenuItem.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <Image
                                            x:Name="ButtonAddDocumentsFromLibraryIcon"
                                            Width="32"
                                            Height="32" />
                                        <TextBlock x:Name="ButtonAddDocumentsFromLibraryText" />
                                    </StackPanel>
                                </MenuItem.Header>
                            </MenuItem>
                            <MenuItem x:Name="ButtonAddMissingDocumentsFromSelf">
                                <MenuItem.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <Image
                                            x:Name="ButtonAddMissingDocumentsFromSelfIcon"
                                            Width="32"
                                            Height="32" />
                                        <TextBlock x:Name="ButtonAddMissingDocumentsFromSelfText" />
                                    </StackPanel>
                                </MenuItem.Header>
                            </MenuItem>
                        </MenuItem>
                        <MenuItem x:Name="ButtonBibTexSniffer">
                            <MenuItem.Header>
                                <StackPanel>
                                    <Image
                                        x:Name="ButtonBibTexSnifferIcon"
                                        Width="32"
                                        Height="32" />
