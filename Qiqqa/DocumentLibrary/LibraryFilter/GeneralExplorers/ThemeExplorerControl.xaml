<UserControl x:Class="Qiqqa.DocumentLibrary.LibraryFilter.GeneralExplorers.ThemeExplorerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local_gui="clr-namespace:Utilities.GUI;assembly=Utilities"
    xmlns:local_explorer="clr-namespace:Qiqqa.DocumentLibrary.TagExplorerStuff"
>
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" TextWrapping="Wrap" Padding="5" Name="TxtNoThemesMessage">
            You have not yet generated any Themes for this Library.  You can do so using Qiqqa Expedition, which is accessible from the toolbar above, or you can
            <Hyperlink Name="HypRunExpedition">
                run Expedition now
            </Hyperlink>
            .
        </TextBlock>
        <local_explorer:GenericLibraryExplorerControl x:Name="ThemeExplorerTree" />
    </DockPanel>
</UserControl>