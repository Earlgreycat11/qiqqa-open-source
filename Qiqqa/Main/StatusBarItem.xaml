<UserControl
    x:Class="Qiqqa.Main.StatusBarItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="2,2,2,2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Button
            Name="ObjTextSquare"
            Grid.Column="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBlock Name="ObjTextSquareText" />
        </Button>
        <ProgressBar Name="ObjProgressBar" Grid.Column="1" />
        <TextBlock
            Name="ObjTextBlock"
            Grid.Column="1"
            Padding="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" />
    </Grid>
</UserControl>